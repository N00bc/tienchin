<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyn.tienchin.course.mapper.CourseMapper">

    <select id="selectCourseVoList" resultType="com.cyn.tienchin.course.domain.vo.CourseVo">
        SELECT *
        FROM tienchin_course
        WHERE del_flag = 0
        <if test="courseVo.minPrice != null">AND price &gt;= #{courseVo.minPrice}</if>
        <if test="courseVo.maxPrice != null">AND price &lt;= #{courseVo.maxPrice}</if>
        <if test="courseVo.courseName != null">AND course_name LIKE CONCAT('%',#{courseVo.courseName},'%')</if>
        <if test="courseVo.type != null">AND type = #{courseVo.type}</if>
        <if test="courseVo.apply != null">AND apply = #{courseVo.apply}</if>
    </select>
</mapper>
